{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Contact</h1>
    {{ form_start(form) }} {# ouvre la balise form #}
    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.subject) }}{# élement de formulaire pour name #}
    {{ form_row(form.body) }}{# élement de formulaire pour name #}

    <div class="form-btn-group pull-right">
        <button type="submit" class="btn btn-primary">Envoyer</button>
    </div>
    {{ form_end(form)}} {# ferme la balise form #}
{% endblock %}

